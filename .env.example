# =============================================================================
# ShipAPI Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values.
# .env is gitignored — never commit secrets.

# -----------------------------------------------------------------------------
# Database (Neon serverless PostgreSQL recommended)
# -----------------------------------------------------------------------------
# Pooled connection via PgBouncer — used by the app for all queries
# Format: postgresql+asyncpg://user:password@host/dbname?sslmode=require
DATABASE_URL=postgresql+asyncpg://shipapi:password@localhost:5432/shipapi

# Direct connection — used by Alembic for migrations (bypasses PgBouncer)
# Format: postgresql+asyncpg://user:password@host/dbname?sslmode=require
DATABASE_URL_DIRECT=postgresql+asyncpg://shipapi:password@localhost:5432/shipapi

# -----------------------------------------------------------------------------
# JWT Authentication
# -----------------------------------------------------------------------------
# Secret key for signing JWT tokens — use a long random string in production
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=change-me-to-a-long-random-secret-key

# JWT algorithm (default: HS256)
# JWT_ALGORITHM=HS256

# Access token expiry in minutes (default: 30)
# JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Refresh token expiry in days (default: 7)
# JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
# Port to listen on (Railway sets this automatically)
PORT=8000

# Enable debug mode (default: false)
# APP_DEBUG=false
